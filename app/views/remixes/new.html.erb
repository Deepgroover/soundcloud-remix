<h1>Upload Your Remix</h1>

<% form_for(@remix) do |f| %>

  <%= f.error_messages %>

	<%= f.hidden_field :user_id, :value => current_user["id"] %>
	
	<p><%= f.label :title, "Title" %><br>
	<%= f.text_field :title %></p>
	
	<%= f.file_field :asset_data %>

  <p><%= f.submit 'Upload' %></p>

<% end %>

<%= link_to 'Back', remixes_path %>

<%- session_key = ActionController::Base.session_options[:key] -%>

<script type="text/javascript">

$(document).ready(function() {
  $('#remix_asset_data').uploadify({  
			uploader				: '/swfs/uploadify.swf',
			/*script          : '/welcome/create',*/
			cancelImg				: '/images/cancel.png',
      fileDataName    : 'asset[file]',
      scriptData      : {
        '<%= session_key %>' : '<%= u(cookies[session_key]) %>',
        'authenticity_token'  : '<%= u(form_authenticity_token) %>'
      },
			onComplete			: function(){ alert('testing'); }
  });
});

</script>